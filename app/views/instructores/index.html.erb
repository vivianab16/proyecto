<h1>Instructores</h1>

<div class="page-header">
  <%= form_tag instructores_path, :method => 'get' do %>
    <% content_tag :label do %>
      <br>
        Identificaci√≥n:
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Buscar", :name => nil %>
      </br>
    <%end%>
  <%end%>
</div>

<table class="table table-condensed">
  <thead>
    <tr>

      <th>Nombre</th>
      <th>Apellidos</th>
      <th>Identificacion</th>
      <th>Centro</th>
      <th>Programa</th>

    </tr>
  </thead>

  <tbody>
    <% @instructores.each do |instructor| %>
      <tr>
        <td><%= instructor.nombre %></td>
        <td><%= instructor.apellidos %></td>
        <td><%= instructor.identificacion %></td>
        <td><%= instructor.centro.nombre %></td>
        <td><%= instructor.programa.nombre %></td>
        <td><%= link_to 'Ver', instructor, :class => 'btn btn-mini' %></td>
        <td><%= link_to 'Editar', edit_instructor_path(instructor), :class => 'btn btn-mini' %></td>
        <td><%= link_to 'Eliminar', instructor, method: :delete, data: { confirm: 'Esta seguro?' }, :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new', :default => t("helpers.links.Nuevo instructor")),
            new_instructor_path,
            :class => 'btn btn-primary' %>

<%= will_paginate @instructores, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;' %>
<br>
Instructores: <%= @instructores.count %>