<h1>Funcionarios</h1>

<div class="page-header">
  <%= form_tag funcionarios_path, :method => 'get' do %>
    <% content_tag :label do %>
      <br>
        Identificaci√≥n:
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Buscar", :name => nil %>
      </br>
    <%end%>
  <%end%>
</div>
<table class="table table-condensed">
  <thead>
    <tr>

      <th>Nombre</th>
      <th>Apellidos</th>
      <th>Identificacion</th>
      <th>Centro</th>
      <th>Programa</th>
      
    </tr>
  </thead>

  <tbody>
    <% @funcionarios.each do |funcionario| %>
      <tr>
    
        <td><%= funcionario.nombre %></td>
        <td><%= funcionario.apellidos %></td>
        <td><%= funcionario.identificacion %></td>
        <td><%= funcionario.centro.nombre %></td>
        <td><%= funcionario.programa.nombre %></td>
        <td><%= link_to 'Ver', funcionario, :class => 'btn btn-mini' %></td>
        <td><%= link_to 'Editar', edit_funcionario_path(funcionario), :class => 'btn btn-mini' %></td>
        <td><%= link_to 'Eliminar', funcionario, method: :delete, data: { confirm: 'Esta seguro?' }, :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new', :default => t("helpers.links.Nuevo funcionario")),
            new_funcionario_path,
            :class => 'btn btn-primary' %>

<%= will_paginate @funcionarios, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;' %>
<br>
Funcionarios: <%= @funcionarios.count %>