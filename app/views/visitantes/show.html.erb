<%- model_class = Visitante -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:aprendiz) %>:</strong></dt>
  <dd><%= @visitante.aprendiz %></dd>
  <dt><strong><%= model_class.human_attribute_name(:funcionario) %>:</strong></dt>
  <dd><%= @visitante.funcionario %></dd>
  <dt><strong><%= model_class.human_attribute_name(:instructor) %>:</strong></dt>
  <dd><%= @visitante.instructor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:empleado) %>:</strong></dt>
  <dd><%= @visitante.empleado %></dd>
  <dt><strong><%= model_class.human_attribute_name(:otro) %>:</strong></dt>
  <dd><%= @visitante.otro %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.Atras")),
              visitantes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.Editar")),
              edit_visitante_path(@visitante), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.Eliminar")),
              visitante_path(@visitante),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirmar", :default => 'Esta seguro?')) },
              :class => 'btn btn-danger' %>
</div>
