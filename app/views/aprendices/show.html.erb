<%- model_class = Aprendiz -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nombre) %>:</strong></dt>
  <dd><%= @aprendiz.nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:apellido) %>:</strong></dt>
  <dd><%= @aprendiz.apellido %></dd>
  <dt><strong><%= model_class.human_attribute_name(:identificacion) %>:</strong></dt>
  <dd><%= @aprendiz.identificacion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:centro) %>:</strong></dt>
  <dd><%= @aprendiz.centro.nombre rescue nil %></dd>
  <dt><strong><%= model_class.human_attribute_name(:programa) %>:</strong></dt>
  <dd><%= @aprendiz.programa.nombre rescue nil %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ficha) %>:</strong></dt>
  <dd><%= @aprendiz.ficha %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.Atras")),
              aprendices_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.Editar")),
              edit_aprendiz_path(@aprendiz), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.Eliminar")),
              aprendiz_path(@aprendiz),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirmar", :default => 'Esta seguro?')) },
              :class => 'btn btn-danger' %>
</div>
