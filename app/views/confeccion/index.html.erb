<h1>Listing confeccion</h1>

<table>
  <thead>
    <tr>
      <th>Ficha</th>
      <th>Programa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @confeccion.each do |confeccion| %>
      <tr>
        <td><%= confeccion.ficha %></td>
        <td><%= confeccion.programa %></td>
        <td><%= link_to 'Show', confeccion %></td>
        <td><%= link_to 'Edit', edit_confeccion_path(confeccion) %></td>
        <td><%= link_to 'Destroy', confeccion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

