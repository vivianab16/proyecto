<h1>Lista de Programas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @programas.each do |programa| %>
      <tr>
        <td><%= programa.nombre %></td>
        <td><%= link_to 'Ver', programa, :class => 'btn btn-mini' %></td>
        <td><%= link_to 'Editar', edit_programa_path(programa), :class => 'btn btn-mini' %></td>
        <td><%= link_to 'Eliminar', programa, method: :delete, data: { confirm: 'Esta seguro?' },
        :class => 'btn btn-mini btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Programa', new_programa_path, :class => 'btn btn-primary' %>
